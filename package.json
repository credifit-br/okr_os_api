{
  "name": "api-example",
  "version": "0.0.1",
  "description": "Example project built with sdkgen and TypeORM",
  "scripts": {
    "sdkgen": "sdkgen src/api.sdkgen -o src/generated/api.ts -t typescript_nodeserver",
    "jsonschema": "typescript-json-schema \"src/integrations/**/*.ts\" '*' > src/generated/integrations.schema.json",
    "dev": "ts-node -r dotenv/config -P tsconfig.json src/server.ts",
    "start": "node -r dotenv/config build/server.js",
    "migration:create": "typeorm migration:create --dir src/migrations --name",
    "migration:generate": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:generate --name",
    "migration:revert": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:revert",
    "migration:run": "ts-node -r dotenv/config ./node_modules/typeorm/cli.js migration:run",
    "eslint:fix": "cross-env eslint --fix '**/*.{t,j}s'",
    "eslint:check": "cross-env eslint '**/*.{t,j}s'",
    "prettier:fix": "cross-env prettier --write '{src,tests}/**/*.{t,j}s'",
    "prettier:check": "cross-env prettier --check '{src,tests}/**/*.{t,j}s'",
    "postgres:start": "docker run -d -p 5432:5432 --name postgres -e POSTGRES_HOST_AUTH_METHOD=trust postgres:11-alpine",
    "database:create": "docker exec postgres psql -U postgres postgres -c \"CREATE DATABASE $(grep DB_DATABASE .env | cut -d= -f 2)\"",
    "test": "jest -w9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env lint-staged && sed -i -e 's/http:\\/\\//https:\\/\\//g' package-lock.json && npm run sdkgen && git diff --cached --diff-filter=M --exit-code src/migrations",
      "commit-msg": "node ./.githooks/commit-msg.js"
    }
  },
  "dependencies": {
    "@elastic/elasticsearch": "^6.8.6",
    "@sdkgen/node-runtime": "^1.1.0",
    "@sentry/node": "^5.15.5",
    "ajv": "^6.12.2",
    "axios": "^0.19.2",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "typeorm": "^0.2.24",
    "typeorm-naming-strategies": "^1.1.0"
  },
  "devDependencies": {
    "@cubos/eslint-config": "latest",
    "@sdkgen/cli": "^1.1.0",
    "@types/faker": "^4.1.11",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.37",
    "axios-mock-adapter": "^1.18.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.1",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "typescript-json-schema": "^0.42.0"
  }
}
